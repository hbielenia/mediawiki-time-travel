{
	"name": "MediaWiki Time Travel",
	"version": "1.0.2",
	"description": "Browse MediaWiki at a given date in the past.",
	"homepage_url": "https://github.com/hbielenia/mediawiki-time-travel",
	"permissions": [
		"declarativeContent",
		"tabs",
		"webRequest",
		"webRequestBlocking",
		"http://*/*",
		"https://*/*"
	],
	"background": {
		"scripts": [ "background.js" ],
		"persistent": true
	},
	"page_action": {
		"default_icon": {
			"16": "icons/icon_16.png",
			"19": "icons/icon_19.png",
			"48": "icons/icon_48.png",
			"64": "icons/icon_64.png",
			"128": "icons/icon_128.png"
		},
		"default_title": "MediaWiki Time Travel",
		"default_popup": "popup.html"
	},
	"manifest_version": 2
}
